<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpaceSimMaui.MainPage">

<VerticalStackLayout Spacing="5" Padding="5">
        
        <!-- Planet Picker -->
        <Picker x:Name="planetPicker" 
        Title="Select a Planet" 
        SelectedIndexChanged="OnPlanetSelected"
        />
            
        


        
        <!-- Space Simulator Drawable View -->
        <GraphicsView x:Name="draw" HeightRequest="1200" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
        
    </VerticalStackLayout>

 
      
</ContentPage>

   


